// TODO find (write?) better latex spell checker
{
  "[dockercompose]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html][css][javascript][typescript][javascriptreact][typescriptreact][handlebars][jinja-html][json][jsonc][yaml][markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "cSpell.enableFiletypes": ["dockerfile", "toml"],
  "cSpell.enabled": true,
  "cSpell.userWords": ["alipatti", "Alistair", "Pattison"],
  "debug.onTaskErrors": "abort",
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.inlayHints.fontSize": 11,
  "editor.inlayHints.padding": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.wordWrap": "on",
  "emmet.includeLanguages": {
    "django-html": "html",
    "jinja-html": "html"
  },
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
    // "info"
  ],
  "errorLens.scrollbarHackEnabled": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.fileNesting.enabled": true,
  "explorer.sortOrder": "default",
  "files.associations": {
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "*.cls": "latex",
    "*.css": "css",
    "*.hbs": "handlebars",
    "*.html": "html",
    "*.j2": "jinja-html",
    "*.jhtml": "jinja-html",
    "*.pyx": "python",
    "*.sage": "python",
    "*.sty": "latex",
    "*.txt": "plaintext",
    ".env.local": "env",
    ".latexmkrc": "perl"
  },
  "git.confirmSync": false,
  "latex-workshop.hover.preview.enabled": false,
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "args": ["%DOC%"],
      "command": "latexmk",
      "name": "latexmk"
    }
  ],
  "latex-workshop.latexindent.args": ["-c", "%DIR%/", "%TMPFILE%", "-m"],
  "latex-workshop.linting.chktex.enabled": true,
  "latex-workshop.message.error.show": false,
  "latex-workshop.view.pdf.viewer": "tab",
  "liveServer.settings.donotShowInfoMsg": true,
  "python.analysis.typeCheckingMode": "basic", // TODO turn up to strict?
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "python.formatting.provider": "black",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "rainbowTags.supportedLanguages": ["jinja-html", "html", "handlebars"],
  "redhat.telemetry.enabled": false,
  "rust-analyzer.checkOnSave.command": "clippy",
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "Handlebars": "html",
    "jinja-html": "html"
  },
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.tabs.enabled": false,
  "todohighlight.defaultStyle": {
    "borderRadius": "3px",
    "fontWeight": "bold",
    "opacity": ".9"
  },
  "todohighlight.include": [
    // web
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.css",
    // rust
    "**/*.rs",
    // latex
    "**/*.tex",
    "**/*.sty",
    "**/*.cls",
    // python
    "**/*.py",
    // markdown
    "**/*.md"
  ],
  "todohighlight.keywords": [
    "TODO",
    "todo!", // rust macro
    "FIX",
    "CHECK",
    "HACK",
    {
      "backgroundColor": "white",
      "text": "unimplemented!"
    }, // rust
    {
      "backgroundColor": "white",
      "text": "NotImplemented"
    }, // python
    {
      "backgroundColor": "green",
      "color": "white",
      "text": "IDEA"
    },
    {
      "backgroundColor": "green",
      "color": "white",
      "text": "ASK"
    }
  ],
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "window.closeWhenEmpty": true,
  "window.commandCenter": true,
  "workbench.colorCustomizations": {
    "[Default Dark+]": {
      "editorInlayHint.background": "#3d3d3d00",
      "editorInlayHint.foreground": "#868686f0"
    }
  },
  "workbench.editor.enablePreview": true,
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "none",
  "window.zoomLevel": 1,
  "latex-workshop.latex.clean.method": "cleanCommand",
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.linting.chktex.exec.args": [
    "-wall",
    "-n22",
    "-n30",
    "-e16",
    "-q",
    "-n46"
  ]
}
