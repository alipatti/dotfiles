\renewcommand{\maketitle}{
	\begin{center}
		{\LARGE \scshape \@title}

		\vspace{-.5em}
		\rule{.4 \textwidth}{0.5pt}

		{\@author \hspace{.4em} $|$ \hspace{.4em} \@date}
	\end{center}

}
