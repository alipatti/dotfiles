\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{ali-pseudocode}

% ALGORITHM/CODE PACKAGES
\RequirePackage[
	noEnd,
	endLComment={},
]{algpseudocodex}

\RequirePackage{algorithm}
\newcommand{\algorithmautorefname}{Algorithm}

\newcommand{\algorithm}[1]{
	\medskip
	\begin{algorithmic}[1]
		#1
	\end{algorithmic}
}

\newcommand{\function}[3]{
	\Function {#1} {#2}
	#3
	\EndFunction
	\smallskip
}

